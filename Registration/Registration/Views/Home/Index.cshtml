@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>
<a href="/home/create">Create</a>
<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <th></th>
        <th></th>
    </tr>
    @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>@cat.Name</td>
                    <td><a href="/home/details/@cat.Id">Details</a></td>
                    <td><a href="/home/edit/@cat.Id">Edit</a></td>
                    <td><a href="home/delete/@cat.Id">Delete</a></td>
                </tr>
            }
</table>